# bc -l but more intuitive
alias "calc"="bc -l"

# Yay cache cleanup
alias "yaycache"="sudo rm -r .cache/yay/*"

# Total cache cleanup
alias "purgecache"="paccache -rk1 && yaycache"

# Based weather
alias "weather"="curl wttr.in"

# Spotifyd daemon fix (systemd)
alias "unfuckspotify"="systemctl --user restart spotifyd"

# Alternate command for Spotify-tui so as to never get it wrong
alias spotify-tui=spt

# Screensaver tomfoolery
alias "screensaver"="./screensaver"

